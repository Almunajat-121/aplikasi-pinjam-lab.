<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<BorderPane fx:id="mainBorderPane" prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.almunajat.aplikasipinjambarang.controller.AdminDashboardController">
    <left>
        <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="200.0" spacing="10.0" style="-fx-background-color: #34495e;" BorderPane.alignment="CENTER">
            <children>
                <Label text="Admin Panel" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="20.0" />
                    </font>
                    <VBox.margin>
                        <Insets bottom="20.0" top="20.0" />
                    </VBox.margin>
                </Label>
                <Button mnemonicParsing="false" onAction="#handleManageItems" prefWidth="180.0" styleClass="btn,btn-primary" text="Manajemen Barang">
                    <VBox.margin>
                        <Insets bottom="5.0" top="5.0" />
                    </VBox.margin>
                </Button>
                <Button mnemonicParsing="false" onAction="#handleApproveLoans" prefWidth="180.0" styleClass="btn,btn-primary" text="Persetujuan Peminjaman">
                    <VBox.margin>
                        <Insets bottom="5.0" top="5.0" />
                    </VBox.margin>
                </Button>
                <Button mnemonicParsing="false" onAction="#handleViewAllLoans" prefWidth="180.0" styleClass="btn,btn-primary" text="Riwayat Peminjaman">
                    <VBox.margin>
                        <Insets bottom="5.0" top="5.0" />
                    </VBox.margin>
                </Button>
                <Button mnemonicParsing="false" onAction="#handleLogout" prefWidth="180.0" styleClass="btn,btn-danger" text="Logout">
                    <VBox.margin>
                        <Insets bottom="5.0" top="20.0" />
                    </VBox.margin>
                </Button>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </VBox>
    </left>
    <center>
        <Label text="Selamat Datang, Admin!" BorderPane.alignment="CENTER">
            <font>
                <Font name="System Bold" size="36.0" />
            </font>
        </Label>
    </center>
</BorderPane>