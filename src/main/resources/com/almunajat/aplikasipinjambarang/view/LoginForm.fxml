<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="300.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.almunajat.aplikasipinjambarang.controller.LoginController">
    <children>
        <VBox alignment="CENTER" layoutX="50.0" layoutY="30.0" prefHeight="240.0" prefWidth="300.0" spacing="10.0" AnchorPane.bottomAnchor="30.0" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="30.0">
            <children>
                <Label text="Login Aplikasi">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Label>
                <Label prefHeight="18.0" prefWidth="328.0" text="Username:" />
                <TextField fx:id="usernameField" promptText="Masukkan username" styleClass="form-control" />
                <Label prefHeight="18.0" prefWidth="479.0" text="Password:" />
                <PasswordField fx:id="passwordField" promptText="Masukkan password" styleClass="form-control" />
                <Button fx:id="loginButton" mnemonicParsing="false" onAction="#handleLoginButton" prefHeight="26.0" prefWidth="167.0" styleClass="btn,btn-primary" text="Login" />
                <Button fx:id="registerButton" mnemonicParsing="false" onAction="#handleRegisterButton" styleClass="btn,btn-info" text="Belum punya akun? Register" />
            </children>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
        </VBox>
    </children>
</AnchorPane>
